<% layout('layout') -%>

<div class="container py-5">
  <!-- Hero -->
  <!-- HERO con immagine -->
    <div class="hero p-5 rounded-4 overflow-hidden"
      style="background-image: url('/img/hero/accademia-hero.jpg'); background-size: cover; background-position: center; height: 500px;">
      <div
        class="d-flex flex-column justify-content-center align-items-center h-100 w-100 bg-dark bg-opacity-50 text-white text-center px-3 rounded-3">
        <h1 class="display-4 fw-bold mb-3">
          Benvenuti nell'Accademia Musicale
        </h1>
        <p class="fs-5 mb-4">
          Cresciamo insieme, tra musica, passione e competenza.
        </p>
        <a href="/accademia/sceltaCorsi" class="btn btn-light btn-lg">Scopri i nostri corsi</a>
      </div>
    </div>

  <!-- Mission & Vision -->
  <div class="row align-items-stretch my-5">
    <div class="col-md-6 mb-4 mb-md-0">
      <div class="p-4 border-custom h-100">
        <h3 class="text-primary text-center">Mission</h3>
        <p class="fs-5">
          Offrire percorsi musicali per ogni età e livello, coniugando qualità,
          umanità e innovazione educativa.
        </p>
      </div>
    </div>
    <div class="col-md-6">
      <div class="p-4 border-custom h-100">
        <h3 class="text-primary text-center">Vision</h3>
        <p class="fs-5">
          Essere un punto di riferimento culturale che trasforma la passione per
          la musica in crescita personale e comunitaria.
        </p>
      </div>
    </div>
  </div>

  <!-- Valori -->
  <h3 class="text-center text-primary mb-4">I nostri valori</h3>
  <div class="row text-center g-4 mb-5">
    <div class="col-md-3">
      <div class="card border-custom h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title text-primary">Crescita</h5>
          <p class="card-text">
            Accompagnamo ogni allievo in un percorso personale e condiviso di
            miglioramento.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card border-custom h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title text-primary">Espressività</h5>
          <p class="card-text">
            Favoriamo l’espressione di sé attraverso la musica, in tutte le sue
            forme.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card border-custom h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title text-primary">Competenza</h5>
          <p class="card-text">
            Insegnanti qualificati, metodi aggiornati, obiettivi chiari.
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card border-custom h-100 shadow-sm">
        <div class="card-body">
          <h5 class="card-title text-primary">Relazione</h5>
          <p class="card-text">
            Crediamo nella forza del gruppo e nella comunità musicale che si
            crea.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Testimonianze -->
  <h3 class="text-center text-primary mb-4">Cosa dicono i nostri allievi</h3>
  <div class="testimonianze-section text-white py-5 mb-5">
  <div class="testimonianze-container">
    <% feedback.forEach((item, index) => { %>
      <div class="testimonianza <%= index === 0 ? 'visibile' : '' %>">
        <div class="feedback-box mx-auto text-center">
          <p class="fs-5 fst-italic mb-3">"<%= item.testimonianza %>"</p>
          <h6 class="mb-0"><%= item.nome %></h6>
          <small><%= item.strumento %></small>
        </div>
      </div>
    <% }) %>
  </div>
</div>


  <!-- Call to action -->
  <div class="text-center mt-5">
    <a href="/accademia/sceltaCorsi" class="btn btn-lg btn-accent px-5"
      >Scopri i nostri corsi</a
    >
  </div>
</div>
