<% layout('layout') -%>

<div class="container my-5">
  <div class="row mb-4">
    <div class="col-md-4 text-center">
    <img
    src="/<%= !insegnante.foto || insegnante.foto.trim() === '' || insegnante.foto.trim() === 'img/insegnanti/' ? 'img/insegnanti/default.webp' : insegnante.foto %>"
    class="img-fluid rounded shadow-sm mb-3"
    alt="<%= insegnante.nome %>"
    />
    </div>
    <div class="col-md-8">
      <h1><%= insegnante.nome %></h1>
      <% if (insegnante.bio && insegnante.bio.trim().length > 0) { %>
        <p><%= insegnante.bio %></p>

        <h4 class="mt-4">Titoli di studio</h4>
        <% if (insegnante.titoli && insegnante.titoli.length > 0) { %>
          <ul>
            <% insegnante.titoli.forEach(titolo => { %>
              <li><%= titolo %></li>
            <% }) %>
          </ul>
        <% } else { %>
          <p class="text-muted">Al momento le informazioni non sono disponibili</p>
        <% } %>

        <h4 class="mt-4">Esperienza</h4>
        <% if (insegnante.esperienza && insegnante.esperienza.length > 0) { %>
          <ul>
            <% insegnante.esperienza.forEach(exp => { %>
              <li><%= exp %></li>
            <% }) %>
          </ul>
        <% } else { %>
          <p class="text-muted">Al momento le informazioni non sono disponibili</p>
        <% } %>
      <% } else { %>
        <div class="alert alert-warning" role="alert">
          <i class="bi bi-info-circle-fill text-warning me-3 fs-4"></i>
          L'insegnante non ha ancora condiviso la sua biografia. Dai un'occhiata pi√π avanti!
        </div>
      <% } %>
      <h4 class="mt-4">Corsi tenuti</h4>
      <ul>
        <% corsiInsegnante.forEach(corso => { %>
        <li>
          <a
            href="/accademia/corso?id=<%= corso.tag %>"
            class="text-decoration-none"
          >
            <%= corso.titolo %>
          </a>
        </li>
        <% }) %>
      </ul>
    </div>

<% if (insegnante.bio && insegnante.bio.trim().length > 0 && insegnante.citazione && insegnante.citazione.trim().length > 0) { %>
<div class="row justify-content-center">
  <div class="col-md-10">
    <div class="citazione-icona p-4 rounded-4 d-flex align-items-center gap-3 shadow-sm">
      <div class="display-6 text-primary">
        <i class="bi bi-music-note-beamed"></i>
      </div>
      <div class="flex-grow-1 text-center">
        <blockquote class="blockquote mb-0">
          <p class="fs-4 fst-italic mb-1">"<%= insegnante.citazione %>"</p>
          <footer class="blockquote-footer mt-2"><%= insegnante.nome %></footer>
        </blockquote>
      </div>
    </div>
  </div>
</div>
<% } %>





</div>
