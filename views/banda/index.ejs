<style>
  /* Sfondo fisso su tutto il body - sempre intero */
  body {
    background: url("/img/logoBanda.webp") center center / contain no-repeat
      fixed;
    background-color: #f8f9fa; /* fallback color */
  }

  /* Overlay semi-trasparente per migliorare la leggibilità */
  .content-overlay {
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 10px;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  /* HERO banner full-width: mantiene immagine a tutta larghezza e altezza dinamica */
  .banner {
    width: 100%;
    position: relative;
    z-index: 2;
    /* margin-left: calc(-50vw + 50%); evita le bande laterali se il layout usa container max-width */
  }

  /* banner-img: height variabile con object-fit per mantenere l'aspetto */
  .banner-img {
    display: block;
    width: 100%;
    height: clamp(200px, 40vh, 560px); /* adatta altezza a schermo */
    object-fit: cover; /* usa 'contain' se vuoi mostrare sempre tutta l'immagine */
    object-position: center center;
  }

  /* piccoli ritocchi immagine nella sezione chi siamo */
  figure img {
    height: auto;
    max-height: 360px;
    object-fit: cover;
  }

  /* Migliora la leggibilità delle sezioni con sfondo */
  .bg-light {
    background-color: rgba(248, 249, 250, 0.9) !important;
  }

  /* su schermi molto piccoli, mantieni lo sfondo fisso e intero */
  @media (max-width: 576px) {
    .banner-img {
      height: clamp(140px, 30vh, 260px);
      object-position: center top;
    }

    body {
      background: url("/img/logoBanda.webp") center center / contain no-repeat
        fixed;
      /* Mantieni lo sfondo fisso anche su mobile */
    }

    .content-overlay {
      padding: 1rem;
    }
  }
</style>
